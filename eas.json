{
    "cli": {
        "version": ">= 10.2.1",
        "appVersionSource": "remote"
    },
    "build": {
        "dev": {
            "distribution": "internal",
            "channel": "dev",
            "autoIncrement": true,
            "android": {
                "buildType": "apk",
                "applicationArchivePath": "android/app/build/outputs/**/*.{apk,aab}"
            },
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "distribution": "internal",
            "channel": "preview"
        },
        "production": {
            "channel": "production"
        }
    },
    "submit": {
        "production": {}
    }
}
