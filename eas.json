{
  "cli": {
    "version": ">= 10.2.1",
    "appVersionSource": "remote"
  },
  "build": {
    "dev": {
      "distribution": "internal",
      "channel": "dev",
      "android": {
        "buildType": "apk",
        "applicationArchivePath": "android/app/build/outputs/**/*.{apk,aab}",
        "autoIncrement": "version"
      },
      "ios": {
       "simulator": false
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "channel": "production"
    }
  },
  "submit": {
    "production": {}
  }
}
